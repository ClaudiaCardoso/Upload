<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FalaAíCidadao</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/component.css" rel="stylesheet">
</head>
<body style="background-image:url(../../ImagensLayout/Teste.png); background-position-y:-100px; " >
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary navbar-fixed-top" style="margin-top:-50px !important;">
        <a class="navbar-brand" href="@Url.Action("Index", "Home")"><img src="~/ImagensLayout/Logo.png" /></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="@Url.Action("Index", "Home")">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("TimeLinePostagensPolitico", "Postagem")">Postagens</a>
                </li>
            </ul>
            <ul class="navbar-nav navbar-right">
                <li class="nav-item active">
                    <a class="nav-link" href="@Url.Action("PerfilPolitico", "Politico")">Perfil<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="@Url.Action("Sair", "Home")">Sair<span class="sr-only">(current)</span></a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <br />
        <br />
    </div>

    <footer class="fixed-bottom" style="background-color:#0859b3; color:white;">
        <br />
        <div class="row">
            <div class="col-md-7 offset-1">
                <a href="http://www.senaipr.org.br/" style="color:white !important;"> Senai PR</a> |
                <a href="http://votebem.org.br/" style="color:white !important;"> Fiep Vote Bem </a> |
                <a href="http://www.sistemafiep.org.br/" style="color:white !important;"> Sistema FIEP</a>
            </div>
            <div class="col-md-4">
                <p class="muted pull-right">© 2017 Senai. Projeto Fala Aí, Cidadão.</p>
            </div>
        </div>
    </footer>
    <script src="~/Scripts/custom-file-input.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
